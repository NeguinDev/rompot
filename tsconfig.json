{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "lib": ["es2020", "esnext.array", "DOM"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "./src/baileys/Example/*", "./src/baileys/Media/*", "./src/baileys/src/Tests/*", "./baileys/src/Binary/GenerateStatics.ts"]
}

{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020", "esnext.array", "DOM"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "src/baileys/src/Tests/*", "src/baileys/src/Binary/GenerateStatics.ts"]
}

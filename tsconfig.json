{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@services/*": ["./src/services/*"],
      "@messages/*": ["./src/messages/*"],
      "@modules/*": ["./src/modules/*"],
      "@configs/*": ["src/configs/*"],
      "@enums/*": ["./src/enums/*"],
      "@utils/*": ["./src/utils/*"],
      "@wa/*": ["./src/wa/*"]
    }
  },
  "include": ["src"]
}
